{
  "name": "response-page",
  "author": "c-ameron",
  "homepage": "https://github.com/c-ameron/response-page",
  "version": "0.1.0",
  "type": "module",
  "dependencies": {
    "wrangler": "~>2"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@cloudflare/workers-types": "~>3",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "ava": "^5.1.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "wrangler dev",
    "deploy": "wrangler publish",
    "build": "wrangler publish --dry-run --outdir=dist",
    "test": "npm run build && NODE_OPTIONS=--experimental-vm-modules npx ava --verbose test/*.spec.ts --timeout=20s",
    "ava": "NODE_OPTIONS=--experimental-vm-modules npx ava  test/*.spec.ts --timeout=20s",
    "lint": "npx eslint .",
    "prettier": "npx prettier --write .",
    "prettier-check": "npx prettier --check ."
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
