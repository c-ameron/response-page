{
  "dependencies": {
    "wrangler": "^2.2.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@cloudflare/workers-types": "^3.18.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "ava": "^5.0.1",
    "eslint": "^8.27.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "wrangler dev",
    "deploy": "wrangler publish",
    "build": "wrangler publish --dry-run --outdir=dist",
    "test": "npm run build && NODE_OPTIONS=--experimental-vm-modules npx ava --verbose test/*.spec.ts --timeout=20s",
    "ava": "NODE_OPTIONS=--experimental-vm-modules npx ava  test/*.spec.ts --timeout=20s",
    "lint": "npx eslint ."
  },
  "type": "module",
  "version": "0.1.0",
  
    "ava": {
      "extensions": {
        "ts": "module"
      },
      "nodeArguments": [
        "--loader=ts-node/esm"
      ]
    }
  
}
